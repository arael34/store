generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imagesrc    String
  name        String
  price       Int
  quantity    Int
  rating      Float
}

model Session {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  cart    ProductOrder[]
  expires DateTime
}

type ProductOrder {
  id        String @default(cuid())
  productid String
  quantity  Int
}
